/* components/drawerModal/drawerModal.wxss */
.comp-shadow {
  position: fixed;
  bottom: 0;
  left: 0;
  top: 0;
  right: 0;
  z-index: 1;
  display: flex;
  align-items: flex-end;
}
.comp-bg {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0;
  transition: opacity 0.4s;
}
.comp-active {
  opacity: 0.5;
}
.comp-modal {
  background: #fff;
  position: relative;
  z-index: 2;
  width: 100%;
  min-height: 500rpx;
  height: auto;
  box-sizing: border-box;
  transform: translateY(100%);
}
