/* components/proAttr/proAttr.wxss */
.attr-box {
  width: 100vw;
  box-sizing: border-box;
  padding: 0 30rpx;
  position: relative;
}
.attr-close {
  position: absolute;
  top: 0;
  right: 0;
  color: #999;
  font-size: 40rpx;
  padding: 0 30rpx 30rpx;
  line-height: 1;
}
.attr-pro {
  margin-top: 40rpx;
  display: flex;
  align-items: flex-end;
}
.attr-pro-img {
  width: 176rpx;
  height: 176rpx;
  background: #f4f4f4;
  margin-right: 20rpx;
}
.attr-pro-base {
  line-height: 60rpx;
  font-size: 30rpx;
  color: #333;
}
.attr-spec {
  margin-top: 46rpx;
}
.attr-tit {
  font-size: 26rpx;
  line-height: 1;
  color: #333;
}
.attr-spec-list {
  display: flex;
  flex-wrap: wrap;
}
.attr-spec-item {
  border: 1rpx solid #333;
  border-radius: 4rpx;
  padding: 23rpx 27rpx;
  line-height: 1;
  font-size: 24rpx;
  margin-top: 22rpx;
  margin-right: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}
.attr-nums {
  margin-top: 45rpx;
}
.attr-nums-bar {
  margin-top: 22rpx;
  border: 1rpx solid #333;
  width: 320rpx;
  height: 70rpx;
  display: flex;
  border-radius: 4rpx;
  margin-bottom: 198rpx;
}
.attr-nums-inc,
.attr-nums-dec {
  flex: 2;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.attr-nums-input {
  flex: 3;
}
.attr-nums-input input {
  width: 100%;
  height: 100%;
  display: block;
  border-left: 1rpx solid #333;
  border-right: 1rpx solid #333;
  height: 70rpx !important;
  line-height: 70rpx !important;
  color: #000;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}
