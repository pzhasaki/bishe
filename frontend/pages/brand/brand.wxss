.item {
  margin-bottom: 20rpx;
}

.bg {
  width: 100%;
  height: 320rpx;
  background-size: 100% !important;
}

.main {
  background: #fff;
  padding: 35rpx 30rpx;
  position: relative;
}

.main::before {
  content: '';
  width: 0;
  height: 0;
  border-left: 25rpx solid transparent;
  border-right: 25rpx solid transparent;
  border-bottom: 25rpx solid #fff;
  position: absolute;
  top: -20rpx;
  left: 50rpx;
  z-index: 1;
}

.name-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.name {
  font-size: 32rpx;
  line-height: 1;
  color: #000;
  font-weight: bold;
}

.price {
  font-size: 25rpx;
  line-height: 1;
}

.desc {
  font-size: 24rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.pro {
  margin: 15rpx -30rpx 0;
  display: flex;
  justify-content: space-between;
}

.pro image {
  width: 250rpx;
  height: 250rpx;
}
