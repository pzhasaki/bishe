@import "../_template/template.wxss";

.title {
  display: flex;
  justify-content: space-between;
  padding: 35rpx 0;
}

.title-lt {
  font-size: 32rpx;
  color: #333;
  line-height: 1;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.title-rt {
  display: flex;
  align-items: center;
}

.title-rt text {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.title-rt image {
  height: 26rpx;
  width: 18rpx;
}

/* 搜索 */
.search {
  display: flex;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  background: #fff;
}

.search text {
  width: 690rpx;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 30rpx;
  border: 1rpx solid #dadada;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  background: #fafafa url("http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png") no-repeat 160rpx center;
  background-size: 24rpx;
  margin: 20rpx 0;
}

/* banner */
.banner {
  margin-top: 97rpx;
  background: #fff;
  padding: 0 30rpx;
}

.banner-main {
  height: 342rpx;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-main swiper-item {
  border-radius: 16rpx;
  overflow: hidden;
}

/* 服务保障 */
.safe {
  background: #fff;
  padding: 0 30rpx;
}

/* 品牌制造商 */
.brand {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx 22rpx;
}
.brand-main {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.brand-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 8rpx;
  width: 343rpx;
  height: 260rpx;
  padding: 28rpx;
  box-sizing: border-box;
  background-size: 100% 100% !important;
}
.brand-item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 15rpx;
  text-align: center;
}
.brand-item-price {
  font-size: 20rpx;
  color: #999;
  display: flex;
  justify-content: center;
}
.brand-item-price>text {
  margin-right: 10rpx;
}

/* 人气推荐 */
.hot {
  margin: 20rpx 0;
  background: #fff;
  padding: 0 30rpx;
}

.hot-rmd {
  background: #fbefe1;
  display: flex;
  height: 280rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.hot-rmd-img {
  background: url(http://yanxuan.nosdn.127.net/3235bc71e70f134b5499316fc74337d4.png) no-repeat left top;
  background-size: 100%;
  width: 280rpx;
  height: 100%;
  margin-right: 27rpx;
  flex: none;
}

.hot-rmd-img image {
  width: 100%;
  height: 100%;
}

.hot-rmd-info {
  margin-top: 53rpx;
}

.hot-rmd-name {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 20rpx;
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hot-rmd-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1;
  margin-bottom: 34rpx;
}

.hot-rmd-price {
  font-size: 24rpx;
  line-height: 1;
  font-weight: bold;
}

.hot-normal {
  display: flex;
  padding-bottom: 45rpx;
}

.hot-normal-item {
  flex: 1;
}

.hot-normal-item:nth-of-type(2) {
  margin: 0 20rpx;
}

.hot-normal-item image {
  width: 216rpx;
  height: 216rpx;
  margin-bottom: 13rpx;
  background: #f5f5f5;
}

.hot-normal-name {
  font-size: 24rpx;
  color: #333;
  line-height: 1;
  margin-bottom: 17rpx;
}

.hot-normal-price {
  font-size: 22rpx;
  line-height: 1;
  font-weight: bold;
}

/* 热销品类榜 */
.hot-category {
  background: #fff;
  padding: 0 30rpx 17rpx;
}

.hotsale-rmd {
  display: flex;
  justify-content: space-between;
  margin-bottom: 13rpx;
}

.hotsale-rmd-item {
  width: 340rpx;
  height: 200rpx;
  border-radius: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}

.hotsale-rmd-item:nth-of-type(1) {
  background: #f8f2e5;
}

.hotsale-rmd-item:nth-of-type(2) {
  background: #ebeff5;
}

.hotsale-rmd-item text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  flex: 1;
  position: relative;
}

.hotsale-rmd-item text::after {
  content: '';
  width: 50rpx;
  height: 5rpx;
  background: #333;
  position: absolute;
  top: 50rpx;
  left: 23%;
}

.hotsale-rmd-item image {
  width: 200rpx;
  height: 200rpx;
  flex: none;
}

.hotsale-normal {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.hotsale-normal-item {
  width: 164rpx;
  height: 182rpx;
  background: #f5f5f5;
  margin-bottom: 13rpx;
  border-radius: 4rpx;
}

.hotsale-normal-item text {
  color: #333;
  font-size: 26rpx;
  margin-top: 14rpx;
  line-height: 1;
  text-align: center;
}

.hotsale-normal-item image {
  width: 110rpx;
  height: 110rpx;
  margin: 15rpx auto 0;
  display: block;
}

/* 限时购 */
.limit {
  background: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.limit-time {
  display: flex;
  padding-left: 5rpx;
}

.limit-time text {
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
  background: #333;
  width: 32rpx;
  height: 32rpx;
  border-radius: 4rpx;
  line-height: 32rpx;
  text-align: center;
  margin: 0 10rpx;
}

.limit-main {
  display: flex;
  justify-content: space-between;
}

.limit-item {
  margin-bottom: 40rpx;
  width: 216rpx;
  display: flex;
  flex-direction: column;
}

.limit-item image {
  width: 216rpx;
  height: 216rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.limit-price {
  display: flex;
  margin-top: 20rpx;
  line-height: 1;
  font-size: 24rpx;
  align-items: baseline;
  justify-content: center;
  font-weight: bold;
}

.limit-price-original {
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 15rpx;
  line-height: 1;
  font-weight: normal;
}

/* 为你推荐 */
.rmd {
  background: #fff;
  padding: 0 20rpx;
  margin-top: 20rpx;
}
