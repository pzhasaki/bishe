/**category.wxss**/
.personal-section {
  width: 100%;
  background: #f4f4f4;
}
.user {
  width: 100%;
  height: 270rpx;
  background: url(http://bpic.588ku.com/back_pic/03/53/20/715796ca490e96b.jpg) no-repeat left top;
  background-size: cover;
  padding: 65rpx 30rpx;
  display: flex;
  box-sizing: border-box;
  align-items: center;
}
.user-portait {
  width: 145rpx;
  height: 145rpx;
  border-radius: 145rpx;
  margin-right: 30rpx;
  display: block;
}
.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.name {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 30rpx;
}
.desc {
  color:#ad966f;
  font-size:28rpx;
  background:none;
  padding:0;
}
.content {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  margin-bottom: 20rpx;
}
.item {
  width: 33%;
  height: 180rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  border-right: 1rpx solid #dadada;
  border-bottom: 1rpx solid #dadada;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icon {
  height: 45rpx;
  width: 45rpx;
  display: block;
  margin: 0 auto 20rpx;
}
.item:nth-of-type(3n){
  border-right: 0;
}
.item:last-child {
  border-bottom: 0;
}
.accout {
  padding: 40rpx 0;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  border-bottom: 20rpx solid #f4f4f4;
}
