/* miniprogram/pages/addressUpt/addressUpt.wxss */
.upt-section {
  background: #fff;
  height: 100vh;
}

.upt-item {
  border-bottom: 1rpx solid #f1f1f1;
  margin-left: 30rpx;
}

.upt-unit {
  font-size: 30rpx;
  color: #333;
  padding: 40rpx 30rpx 40rpx 0;
  line-height: 1;
}

.upt-default {
  color: #666;
  font-size: 32rpx;
}

.upt-default radio {
  width: 20rpx;
  height: 20rpx;
}

.upt-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  width: 100%;
}

.upt-btn button {
  display: block;
  height: 102rpx;
  line-height: 102rpx;
  width: 100%;
  font-size: 28rpx;
  color: #fff;
  background: #b23131;
  border-radius: 0;
}

.area-modal {
  width: 100%;
  background: #fff;
}

.area-top {
  padding: 0 30rpx 0 10rpx;
  height: 110rpx;
  line-height: 110rpx;
  border-bottom: 1rpx solid #d9d9d9;
  color: #333;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.area-top-lt {
  display: flex;
}

.area-top-lt text {
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.area-select {
  border-bottom: 5rpx solid #b23131;
}

.area-top-rt {
  color: #999;
}

.area-top-confirm {
  color: #333;
}

.area-content {
  width: 100%;
  height: 720rpx;
}

.area-content-item {
  height: 720rpx;
  width: 100%;
}

.area-content-item text {
  font-size: 28rpx;
  height: 90rpx;
  color: #333;
  padding: 0 30rpx;
}

.area-content-item-select {
  color: #b23131 !important;
}
